.container {
  display: flex;
  flex-direction: column;
  padding-top: 40px;
}

.chart {
  width: 90%;
  height: 300px;
}

.annotation-container {
  position: absolute;
  width: 100%;
  height: 500px;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  display: none;
}

.annotation {
  width: 98%;
  height: 400px;
}
.line-mode {
  background-color: #999999;
}
.arrow-mode {
  background-color: #999999;
}
.annotation-action {
  margin-top: 30px;
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}